.inner-basket
  width 1515px
  margin-bottom 20px

.inner-basket__table
  margin-bottom 28px
  .sum
    display flex
    justify-content flex-end
    align-items center
    padding-right: 350px;
    h2
      font('Proxima Nova Rg', 21px, 400, #36383e)
      
      margin-right 28px
    p
      font('Proxima Nova Rg', 43px, 700, #4c4c4c)
      span
        margin-left 5px
        
        font-size 21px
        line-height 25px
  .items
    reset-list()
    
    margin-bottom 28px
    li
      display flex
      align-items center
      margin-bottom 12px
      padding 20px 0
      
      box-shadow: 0px 0px 17px 0px rgba(0,0,0,0.1)
      
      border-radius 5px
      &:last-child
        margin-bottom
      .exit
        reset-button()
        
        position relative
        
        width 20px
        height 20px
        margin-left auto
        margin-right 50px
        
        exit(120%, 2px, #fc381d)
      h3
        font('Proxima Nova Rg', 21px, 400, #36383e)
        
        width: 37.3%;
        
        text-align center
      .price
        font('Proxima Nova Rg', 29px, 400, #eac22b)
        
        width: 13.3%;
        
        text-align center
        span
          margin-left 5px
      .total
        width: 15.2%;
        p
          font('Proxima Nova Rg', 29px, 400, #eac22b)
          
          text-align center
          span
            margin-left 5px
      .calculate-wrap
        display flex
        justify-content center
        width: 13.3%;
        .calculate
          display flex
          box-sizing border-box
          width 107px
          padding 3px 0

          background-color #fed750

          border-radius 5px
          button
            reset-button()

            position relative

            flex-grow 1

            border-radius 0 9px 9px 0
            &::before,
            &::after
              center-absolute()

              content ''

              width 50%
              height 1px

              background-color #fff4cd
            &::before
              transform rotate(90deg)
            &:active
              background-color #fed631
            &.minus
              border-radius 9px 0 0 9px
              &::before
                display none
          p
            font('Proxima Nova Rg', 20px, 400, #4c4c4c)

            box-sizing border-box
            width 38px

            text-align center
            line-height 34px

            border-left 1px solid #ffffff
            border-right 1px solid #ffffff
  .title
    reset-list()
    
    display flex
    margin-bottom 15px
    li
      p
        font('Proxima Nova Rg', 21px, 400, #36383e)
        
        text-align center
      &:nth-child(1)
        width: 37.3%;
      &:nth-child(2),
      &:nth-child(3)
        width: 13.3%;
      &:nth-child(4)
        width: 15.2%;
        
.inner-basket__order
  padding: 0 3.2%;
  padding-top 28px
  padding-bottom 30px
  
  background-color #fff9e5
  
  border-radius 5px
  h2
    font('Proxima Nova Rg', 32px, 700, #36383e)
    
    margin-bottom 30px
  .basket-form
    .privacy
      position relative
      
      padding-left 34px
      input
        hidden()
        &:checked + span
          background-color #f4ddb5
          &::before
            display block
      span
        position absolute
        top 0
        left 0
        bottom 0

        box-sizing border-box
        display block
        width 24px
        height 24px
        margin auto

        border 2px solid #f4ddb5
        border-radius 50%
        
        cursor pointer
        &::before
          center-absolute()
          bgs(16px, 13px)
          bgi('checked-privacy.svg')
          
          content ''
          
          display none
      p
        font('Proxima Nova Rg', 15px, 400, #373535)
        a
          margin-left 5px

          color inherit
    .row
      display flex
      margin-bottom 45px
      .subm
        flex-grow 1
        display flex
        width 20%
        button
          reset-button()
          font('Proxima Nova Rg', 29px, 400, #4c4c4c, true)
          
          width 100%
          
          background-color #feda5a
          
          border-radius 5px
          
          transition 0.2s ease
          &:hover
            background-color #fed631
      .block-input
        width: 69.4%;
        margin-right: 2.116%;
        ul
          reset-list()
          
          display flex
          margin-bottom 28px
          &:last-child
            margin-bottom 0
          li
            position relative
            
            width 237px
            margin-right 30px
            &:last-child
              flex-grow 1
              width 10%
              margin-right 0
            span
              bgs(32px, 32px)
              
              position absolute
              top 0
              left 14px
              bottom 0
              
              margin auto
            input,
            textarea
              reset-input()
              font('Proxima Nova Rg', 16px, 400, #36383e, true)
              placeholder('Proxima Nova Rg', 16px, 400, #36383e)
              
              padding 12px 10px
              padding-left 58px
              
              background-color #ffffff
              
              border 1px solid #fed750
              border-radius 5px
            textarea
              height 46px
              
              resize none
          &:nth-child(1)
            li
              &:nth-child(1)
                span
                  bgi('user1.png')
              &:nth-child(2)
                span
                  bgi('call.png')
              &:nth-child(3)
                span
                  bgi('placeholder2.png')
          &:nth-child(2)
            li
              &:nth-child(1)
                cursor pointer
                input
                  cursor pointer
                span
                  bgi('calendar2.png')
              &:nth-child(2)
                cursor pointer
                input
                  cursor pointer
                span
                  bgi('time.png')
              &:nth-child(3)
                span
                  bgi('chat.png')
        
